// Prisma schema voor TailTribe Dispatch (PostgreSQL)
//
// Use this for Vercel/production so writes are persistent.
// Switch with:
//   node scripts/select-prisma-schema.js postgres

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NOTE:
// - We keep roles/statuses as String for compatibility with existing code.
// - Migrations in prisma/migrations were generated for SQLite; for Postgres,
//   use `prisma db push` (fast) or regenerate migrations on a Postgres DB.

// Users tabel (eigenaars, verzorgers, admin)
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String?
  role          String
  firstName     String
  lastName      String
  phone         String?
  emailVerified DateTime?
  image         String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  ownerProfile     OwnerProfile?
  caregiverProfile CaregiverProfile?
  bookingsAsOwner  Booking[] @relation("BookingOwner")
  bookingsAsCaregiver Booking[] @relation("BookingCaregiver")
  requestsAsOwner  OwnerRequest[] @relation("RequestOwner")
  occurrencesAssigned BookingOccurrence[] @relation("OccurrenceAssigned")
  adminDecisions  AdminDecision[] @relation("DecisionAdmin")
  notifications   Notification[]
  invoiceDrafts   InvoiceDraft[]
  bookingOffers   BookingOffer[] @relation("BookingOfferCaregiver")
  accounts         Account[]
  sessions         Session[]
  verificationTokens VerificationToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([identifier, token])
}

model OwnerProfile {
  id        String @id @default(cuid())
  userId    String @unique
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  address   String?
  city      String
  postalCode String
  region    String?
  petsInfo  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CaregiverProfile {
  id        String @id @default(cuid())
  userId    String @unique
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  city            String
  postalCode      String
  region          String?
  workRegions     String
  maxDistance     Int      @default(20)

  companyName              String?
  enterpriseNumber         String?
  isSelfEmployed           Boolean @default(false)
  hasLiabilityInsurance    Boolean @default(false)
  liabilityInsuranceCompany String?
  liabilityInsurancePolicyNumber String?

  services    String
  servicePricing String?

  experience  String
  bio         String?

  isApproved  Boolean @default(false)
  isActive    Boolean @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  availability Availability[]
}

model Availability {
  id             String @id @default(cuid())
  caregiverId    String
  caregiver      CaregiverProfile @relation(fields: [caregiverId], references: [id], onDelete: Cascade)

  date           DateTime
  timeWindow     String

  isAvailable    Boolean @default(true)
  notes          String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([caregiverId, date, timeWindow])
  @@index([date, timeWindow])
}

model Booking {
  id           String @id @default(cuid())

  ownerId      String
  owner        User   @relation("BookingOwner", fields: [ownerId], references: [id])

  service      String
  date         DateTime
  time         String?
  timeWindow   String

  city         String
  postalCode   String
  region       String?
  address      String?

  petName      String
  petType      String
  petDetails   String?

  contactPreference String @default("email")
  message      String?

  status       String @default("PENDING")
  caregiverId  String?
  caregiver    User? @relation("BookingCaregiver", fields: [caregiverId], references: [id])

  isRecurring        Boolean @default(false)
  recurringPattern   String?
  recurringEndDate   DateTime?
  recurringParentId  String?
  recurringGenerated Boolean @default(false)

  adminNotes   String?
  matchScore   Float?

  offers       BookingOffer[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([date, timeWindow])
  @@index([status])
  @@index([postalCode])
}

model BookingOffer {
  id          String  @id @default(cuid())
  bookingId   String
  booking     Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  caregiverId String
  caregiver   User    @relation("BookingOfferCaregiver", fields: [caregiverId], references: [id], onDelete: Cascade)
  unit        String
  priceCents  Int
  createdAt   DateTime @default(now())

  @@unique([bookingId, caregiverId])
  @@index([bookingId])
  @@index([caregiverId])
}

model OwnerRequest {
  id            String   @id @default(cuid())
  ownerId       String
  owner         User     @relation("RequestOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  service       String
  city          String
  postalCode    String
  address       String?
  region        String?
  preferredTime String?
  startDate     DateTime
  recurrence    String?
  status        String   @default("PENDING_ADMIN")
  notes         String?

  occurrences   BookingOccurrence[]
  decisions     AdminDecision[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([service])
  @@index([postalCode])
  @@index([createdAt])
}

model BookingOccurrence {
  id                 String   @id @default(cuid())
  requestId          String
  request            OwnerRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  scheduledDate      DateTime
  timeWindow         String
  time               String?
  status             String  @default("UNASSIGNED")
  assignedCaregiverId String?
  assignedCaregiver   User?   @relation("OccurrenceAssigned", fields: [assignedCaregiverId], references: [id])
  service            String
  city               String
  postalCode         String
  region             String?
  adminNotes         String?

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([requestId])
  @@index([status])
  @@index([postalCode])
  @@index([scheduledDate, timeWindow])
  @@index([assignedCaregiverId])
}

model AdminDecision {
  id          String   @id @default(cuid())
  requestId   String
  request     OwnerRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  adminId     String
  admin       User     @relation("DecisionAdmin", fields: [adminId], references: [id], onDelete: Cascade)
  action      String
  note        String?
  createdAt   DateTime @default(now())

  @@index([requestId])
  @@index([adminId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  message   String
  entityId  String?
  readAt    DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([readAt])
  @@index([createdAt])
}

model InvoiceDraft {
  id                String   @id @default(cuid())
  ownerId           String
  owner             User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  status            String   @default("DRAFT")
  commissionPercent Int?

  items             InvoiceDraftItem[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([ownerId])
  @@index([status])
  @@index([createdAt])
}

model InvoiceDraftItem {
  id               String   @id @default(cuid())
  invoiceId        String
  invoice          InvoiceDraft @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  bookingId        String?
  service          String
  serviceDate      DateTime
  quantity         Int
  unitPriceCents   Int

  createdAt        DateTime @default(now())

  @@index([invoiceId])
  @@index([bookingId])
}

model Conversation {
  id          String   @id @default(cuid())
  bookingId   String
  ownerId     String
  caregiverId String
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())

  messages    Message[]

  @@unique([bookingId])
  @@index([ownerId])
  @@index([caregiverId])
  @@index([createdAt])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderUserId   String
  senderRole     String
  body           String
  sanitizedBody  String?
  blockedReason  String?
  createdAt      DateTime @default(now())

  moderationLogs MessageModerationLog[]

  @@index([conversationId])
  @@index([conversationId, createdAt])
  @@index([senderUserId])
}

model MessageModerationLog {
  id              String   @id @default(cuid())
  messageId       String
  message         Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  rule            String
  matchedTextHash String
  createdAt       DateTime @default(now())

  @@index([messageId])
}

model CommunityRoom {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  messages    CommunityMessage[]

  @@index([sortOrder])
}

model CommunityMessage {
  id            String   @id @default(cuid())
  roomId        String
  room          CommunityRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  senderUserId  String
  senderRole    String
  body          String
  sanitizedBody String?
  blockedReason String?
  createdAt     DateTime @default(now())

  @@index([roomId])
  @@index([roomId, createdAt])
  @@index([senderUserId])
  @@index([createdAt])
}

